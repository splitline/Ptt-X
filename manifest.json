{
  "name": "Ptt X",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "",
  "permissions": [ "storage" ],
  "content_scripts": [{
    "matches": [
      "https://www.ptt.cc/bbs/index.html",
      "https://www.ptt.cc/bbs/hotboards.html"
    ],
    "js": [
      "dist/index.js"
    ],
    "css": [
      "node_modules/toastr/build/toastr.min.css",
      "node_modules/alertifyjs/build/css/alertify.min.css",
      "node_modules/alertifyjs/build/css/themes/default.min.css",
      "node_modules/react-contexify/dist/ReactContexify.min.css",
      "dist/custom.css"
    ],
    "all_frames": true,
    "run_at": "document_idle"
  }]
}